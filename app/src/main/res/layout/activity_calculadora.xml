<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_ppal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">
    <LinearLayout
        android:id="@+id/layout_pantalla"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="20dp">
        <TextView
            android:id="@+id/txt_pantalla"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="0"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:paddingTop="50dp"
            android:paddingLeft="10dp"
            android:background="@drawable/boton_pantalla_numerica"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btn_borrar"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:backgroundTint="@null"
            android:background="@drawable/boton_delete"
            android:textSize="15sp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_botonera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <LinearLayout
            android:id="@+id/layout_fila1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_AC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal_dos"
                />

            <Button
                android:id="@+id/btn_cambiar_signo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal_dos"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="+/-"/>
            <Button
                android:id="@+id/btn_porcentaje"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:background="@drawable/boton_principal_dos"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="%"/>
            <Button
                android:id="@+id/btn_dividir"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal_tres"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="/"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_fila2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="7"/>
            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="8"/>
            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="9"/>
            <Button
                android:id="@+id/btn_multiplicar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal_tres"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="x"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_fila3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:background="@drawable/boton_principal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="4"/>
            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:background="@drawable/boton_principal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="5"/>
            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="6"/>
            <Button
                android:id="@+id/btn_restar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal_tres"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_fila4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:background="@drawable/boton_principal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="3"/>
            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:background="@drawable/boton_principal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="2"/>
            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="1"/>
            <Button
                android:id="@+id/btn_sumar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal_tres"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_fila5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textSize="20dp"
                android:text="0"/>
            <Button
                android:id="@+id/btn_coma"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textSize="20dp"
                android:text="."/>
            <Button
                android:id="@+id/btn_igual"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:layout_margin="5dp"
                android:background="@drawable/boton_principal_cuatro"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textSize="20dp"
                android:text="="/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
